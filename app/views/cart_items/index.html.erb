

<h3>ショッピングカート</h3>

	<table>
		<tr>
			<th>商品名</th>
			<th>単価（税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>

		<% @products.each do |f| %>

		<tr>
			<td><%= @products.image %> <%= @products.name %></td>
			<td><%= @products.no_tax_price %></td>
			<td><%= form_with model:@product do |f| %>
						<%= f.number_field :quantity %>
						<%= f.submit %>
					<% end %>
			</td>
			<td></td>
			<td><%= link_to '削除',cart_items_path,method: :delete %></td>
		</tr>
		<% end %>
	</table>

