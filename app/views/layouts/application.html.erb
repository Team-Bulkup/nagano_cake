<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="main clearfix">
      <h1 class="logo">LOGO</h1>
        <ul class="header-btn">
        <% if customer_signed_in? %>
          <span>ようこそ○○さん</span>
           <%= link_to "マイページ", customers_path,class:"btn btn-default" %>
           <%= link_to "商品一覧", products_path,class:"btn btn-default" %>
           <%= link_to "カート", cart_items_path,class:"btn btn-default" %>
        <% else %>
            <%= link_to "商品一覧", products_path,class:"btn btn-default" %>
            <%= link_to "新規登録", new_customer_session_path,class:"btn btn-default" %>
            <%= link_to "ログイン", new_customer_registration_path,class:"btn btn-default" %>
        <% end %>
        </ul>
    </div>

    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>

    <%= yield %>

    <footer></footer>
  </body>
</html>
