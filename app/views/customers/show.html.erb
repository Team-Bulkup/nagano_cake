<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-7">
      <span class="all-title">マイページ</span>
      <div class="customer-information">
        <span><strong>登録情報</strong></span>
        <span><%= link_to "編集する",  customers_edit_info_path(@customer), class:"btn customer-edit active" %></span>
        <span><%= link_to "パスワードを変更する", root_path, class:"btn password-edit active" %></span>
      </div>
      <div>
        <table border="1" class="customer-table" width="600">
          <colgroup span="1" class="title"></colgroup>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>

      <div>
        <span><strong>配送先</strong></span><span class="address-index"><%= link_to "一覧を見る", addresses_path, class:"btn customer-addresses active"  %></span>
      </div>

      <div class="order-history">
        <span><strong>注文履歴</strong></span><span class="order-index"><%= link_to "一覧を見る", orders_path, class:"btn customer-orders active" %></span>
      </div>
    </div>
  </div>
</div>