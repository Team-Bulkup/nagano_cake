<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><strong>注文一覧画面</strong></h1>
      <table class="table">
        <tr bgcolor="#eee">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @customer.orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.customer.name %></td>
          <td><%= order.order_products.count %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>