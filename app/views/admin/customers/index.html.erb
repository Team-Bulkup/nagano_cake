<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><strong>会員一覧画面</strong></h1>
      <table class="table">
        <tr bgcolor="#eee">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
         <% @customers.each do |customer| %>
         <tr>
           <td><%= customer.id %></td>
           <td>
            <%= link_to admin_customer_path(customer) do %>
            <%= customer.last_name %><%= customer.first_name %>
            <% end %>
           </td>
           <td><%= customer.email %></td>
           <% if customer.is_deleted == false %>
           <td>有効</td>
           <% else %>
           <td>無効</td>
           <% end %>
         </tr>
         <% end %>
         <%= paginate @customers, class: "paginate" %>
      </table>
    </div>
  </div>
</div>