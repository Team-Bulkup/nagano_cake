<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h1><strong>会員詳細画面</strong></h1>
      <table class="admin-customer-table">
        <tr>
          <td width="120">顧客ID</td>
          <td><%= @customer.id %>
            <% if @customer.is_deleted == false %>
              <span class="customer-definition">有効会員</span>
            <% else %>
              <span class="customer-definition">無効会員</span>
            <%end%>
          </td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-primary" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_customer_orders_path(@customer), class:"btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>