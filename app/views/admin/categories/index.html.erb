<div class="container">
	<div class="row">
		<h1><strong>ジャンル追加・一覧画面</strong></h1>
		<table class="category-form">
			<%= form_with(model: @category, local: true, url: admin_categories_path) do |f| %>
				<tr class="category-new">
					<td><%= f.label :ジャンル %></td>
					<td><%= f.text_field :name, class:"form-control" %></td>
					<td><%= f.radio_button :is_enabled, true %> 有効</td>
					<td><%= f.radio_button :is_enabled, false %> 無効</td>
					<td><%= f.submit "追加", class:"btn category-add active" %></td>
				</tr>
			<% end %>
		</table>

		<table class="table table-bordered" style="width: 30%;">
			<thead bgcolor="#eee">
				<tr>
					<th width="30%">ジャンル</th>
					<th width="30%">状態</th>
					<th width="40%"></th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
				<tr>
					<td><%= category.name %></td>
					<% if category.is_enabled == true %>
						<td>有効</td>
					<% else %>
						<td>無効</td>
					<% end %>
					<td><%= link_to "編集する", edit_admin_category_path(category.id), class:"btn category-edit" %></td>
				<% end %>
			</tbody>
		</table>
	</div>
</div>