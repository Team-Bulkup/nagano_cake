	<div class="order-new-box">
		<h3>注文情報入力</h3>
		<h3>支払方法</h3>

			<%= form_with(model: @order, local: true, url: orders_confirm_path,method: :get) do |f| %>

					<%= f.radio_button :payment_method, :true, checked: true %>
						クレジットカード<br>
					<%= f.radio_button :payment_method, :false %>
						銀行振込

					<h3>お届け先</h3>
						<%= f.radio_button :select,1 %>ご自身の住所<br>
						<%= f.radio_button :select,2 %>登録済住所から選択
						<%= f.collection_select :address_id, Address.where(customer_id: current_customer.id), :id, :address %><br>
						<%= f.radio_button :select,3 %>新しいお届け先<br>

						 	<div class="order-new-select-box clearfix">
								<div class="order-new-select-btn">
									郵便番号（ハイフンなし）<br>
									住所<br>
									宛名<br>
								</div>
								<div class="order-new-text-field">
									<%= f.text_field :postcode %><br>
									<%= f.text_field :address %><br>
									<%= f.text_field :name %><br>
								</div>
							</div>
							<div class="order-new-btn">
								<%= f.submit "確認画面へ進む" %>
							</div>

			<% end %>
		</div>




























