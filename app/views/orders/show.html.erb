
<div class="show-main crearfix">
		 <h3>注文履歴詳細</h3>

	<div class="show-box">
		<div class="show-top-left">
			 <storong>注文情報</storong>
			 <table>

				  <tr>
				    <th>注文日</th><td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
				  </tr>

				  <tr>
				    <th>配送先</th>
				    <td><%= @order.postcode %><%= @order.address %><%= @order.name %></td>
				  </tr>

				  <tr>
				    <th>支払方法</th>
				    <td><% if @order.payment_method = true %> 
				    		<span>クレジットカード</span>
				    	<% else %>
				    		<span>銀行振込</span>
				    	<% end %>
				    </td>
				  </tr>
				  <tr>
				    <th>ステータス</th><td></td>
				  </tr>

			</table>
		</div>

		<div class="show-top-right">
					<storong>請求情報</storong>
				 <table>
					  <tr>
					    <th>商品合計</th><td><%= @order.charge - 800 %></td>
					  </tr>

					  <tr>
					    <th>配送料</th><td>800</td>
					  </tr>

					  <tr>
					    <th>ご請求額</th><td><%= @order.charge %></td>
					  </tr>

				</table>
		</div>
	</div>




				<% @order.order_products.each do |f| %>
				<table>
						<tr>
							<th>商品</th>
							<th>単価（税込）</th>
							<th>個数</th>
							<th>小計</th>
						</tr>
						<tr>
							<td><%= f.name %></td>
							<td><%= f.price / f.quantity %></td>
							<td><%= f.quantity %></td>
							<td><%= f.price %></td>
						</tr>
				</table>
				<% end %>
</div>















