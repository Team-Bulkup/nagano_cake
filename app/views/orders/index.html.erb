<div class="index-main">
	<h3>注文履歴一覧</h3>

	<div class="container">
		<div class="row">
			<div clsss="col-xs-1">
			</div>
			<div clsss="col-xs-10">
						<table class="table">
							<tr>
								<th>注文日</th>
								<th>配送先</th>
								<th>注文商品</th>
								<th>支払金額</th>
								<th>ステータス</th>
								<th>注文詳細</th>
							</tr>
						   		<% @orders.each do |f| %>
						   	<tr>
									<td><%= f.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
									<td><%= f.postcode %> <%= f.address %> <%= f.name %></td>
									<td>
										<% f.order_products.each do |o| %>
											<%= o.name %>
										<% end %>
									</td>
									<td><%= f.charge %></td>
									<td><% if f.payment_method = true %>
											<span>クレジットカード</span>
	    								<% else %>
	    									<span>銀行振込</span>
	    								<% end %>
									</td>
									<td><div class="index-btn"><%= link_to "表示する" ,order_path(f) %></div></td>
								<% end %>
							</tr>
						</table>
			</div>
			<div clsss="col-xs-1">
			</div>
		</div>
	</div>
</div>>

