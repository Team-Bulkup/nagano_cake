<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<div class="categories">
				<h4 class="categories-serch">ジャンル検索</h4>
				<% @categories.each do |category| %>
					<p><%= category.name %></p>
				<% end %>
			</div>
		</div>
		<!-- ジャンルと商品の詳細の間の空白 -->
		<div class="col-xs-1">
		</div>
		<!-- 商品詳細 -->
		<%= form_with(model: @cart_item, local: true, url: cart_items_path) do |f|  %>
			<div class="col-xs-9">
				<div class="row">
					<div class="col-xs-6">
						<%= attachment_image_tag @product, :image, :fill, 400, 260 %>
					</div>
					<div class="col-xs-6">
						<h1><%= @product.name %></h1>
						<p><%= @product.detail %></p>
						<% price = @product.no_tax_price * 1.1 %>
						<h3>¥ <%= price %>（税込）</h3>
					</div>
				</div>
				<!-- 注文個数はセレクトボタンで生成 -->
				<div style="margin: 20px; text-align: right;">
				<%= f.select :quantity, options_for_select((1..25).to_a), include_blank:"個数選択" %>
				<!-- カートに入れるボタン -->
				<%= f.submit "カートに入れる", class:"btn cart-add active" %>
				</div>
			<% end %>
		</div>
	</div>
</div>